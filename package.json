  "author": "Prince Thomas",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/axios-mock-adapter": "^1.10.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.3",
    "@types/pg": "^8.6.3",
    "@types/sequelize": "^4.28.11",
    "@types/supertest": "^2.0.11",
    "axios-mock-adapter": "^1.20.0",
    "cross-env": "^7.0.3",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "semantic-release": "^18.0.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.12.4",
    "sequelize-cli": "^6.3.0"
